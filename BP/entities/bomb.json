{
    "format_version": "1.21.50",
    "minecraft:entity": {
        "description": {
            "identifier": "bombs_away:bomb",
            "is_summonable": true,
            "properties": {
                "bombs_away:ignited": {
                    "type": "bool",
                    "client_sync": true,
                    "default": false
                }
            },
            "animations": {
                "ignite": "animation.explosive.ignite"
            },
            "scripts": {
                "animate": [
                    {
                        "ignite": "query.property('bombs_away:ignited') == true"
                    }
                ]
            }
        },
        "components": {
            "minecraft:health": {
                "value": 1,
                "max": 1
            },
            "minecraft:tameable": {
                "probability": 1,
                "tame_items": "minecraft:barrier"
            },
            "minecraft:collision_box": {
                "height": 0.75,
                "width": 0.75
            },
            "minecraft:damage_sensor": {
                "triggers": [
                    {
                        "cause": "all",
                        "deals_damage": "no"
                    }
                ]
            },
            "minecraft:environment_sensor": {
                "triggers": [
                    {
                        "event": "bombs_away:ignite",
                        "filters": {
                            "all_of": [
                                {
                                    "test": "on_ground",
                                    "value": true
                                },
                                {
                                    "test": "bool_property",
                                    "domain": "bombs_away:ignited",
                                    "value": false
                                }
                            ]
                        }
                    }
                ]
            },
            "minecraft:physics": {},
            "minecraft:body_rotation_blocked": {}
        },
        "events": {
            "bombs_away:ignite": {
                "set_property": {
                    "bombs_away:ignited": true
                }
            },
            // Scripted event
            "bombs_away:explode": {}
        }
    }
}